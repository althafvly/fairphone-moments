        </service>

        <receiver
            android:name=".receiver.CallInterceptorReceiver"
            android:enabled="false"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
        !-->
    </application>
</manifest>
